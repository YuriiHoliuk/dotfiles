# Database queries with nushell tables
dbdev() {
    if [[ -z "$1" ]]; then
        echo "Usage: dbdev 'SELECT query'"
        return 1
    fi
    PGPASSWORD=$(aws rds generate-db-auth-token --hostname=$POSTGRES_HOST --port=$POSTGRES_PORT --region=$AWS_REGION --username=$POSTGRES_USER_IAM) \
    psql -h $POSTGRES_HOST -p $POSTGRES_PORT -U $POSTGRES_USER_IAM -d mate_development -t -A -F',' -c "$1" | nu -c "from csv | table"
}

