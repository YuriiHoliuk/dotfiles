{
  "description": "Use spacebar as hyper key when held, send space when tapped.",
  "manipulators": [
      {
          "type": "basic",
          "description": "Disable hyper key for Space+Dot combination",
          "from": {
              "simultaneous": [
                  {"key_code": "spacebar"},
                  {"key_code": "period"}
              ]
          },
          "to": [
              {"key_code": "spacebar"},
              {"key_code": "period"}
          ]
      },
      {
          "type": "basic",
          "from": {
              "key_code": "spacebar",
              "modifiers": {
                  "optional": ["shift", "command", "option"]
              }
          },
          "to": [
              {
                  "key_code": "left_shift",
                  "modifiers": ["left_command", "left_control", "left_option"]
              }
          ],
          "to_if_alone": [
              {
                  "key_code": "spacebar"
              }
          ]
      }
  ]
}